<main>
<div id="main">
      <div id="content">
        <h2>Add New Post</h2>
        <form action="" method="post">
          <textarea
            name="newpost"
            id="newpost"
            cols="25"
            rows="5"
            placeholder="What's on your mind"
          ></textarea>
          <br />
          <button type="submit" id="addNewPost">Add Post</button>
        </form>

        <div id="freindsList">
          <h4>Freinds List</h4>
          <ul>
            <li>Mukesh</li>
            <li>Shyam</li>
            <li>Ramesh</li>
          </ul>
        </div>
        <div id="peoplist">
          <h4>People List</h4>
          <ul>
          <% for(let i=0; i<people.length; i++){ %> 
            <li>
              <a href="/user/about/<%=people[i].id%>">
              <%= people[i].name %>
              </a>
            </li> 
          
          <% } %>
          </ul>
        </div>
        <div id="messagebox">
            <div id="hideAndShow"></div>
          <div class="message received">
            <p>Hi there!</p>
            <span class="timestamp">12:05 PM</span>
          </div>
          <div class="message sent">
            <p>Hey! How are you?</p>
            <span class="timestamp">12:06 PM</span>
          </div>
          <div class="message received">
            <p>I'm good, thanks. How about you?</p>
            <span class="timestamp">12:07 PM</span>
          </div>

          <div id="messagesend">
            <form action="" method="post">
              <input type="text" name="" id="" />
              <button type="submit"><span>Send</span></button>
            </form>
          </div>
        </div>
        <button id = "messageslider"><img src="./images/fast-forward.png" alt=""></button>
        <button id = "messageslider2"><img src="./images/fast-backward.png" alt=""></button>
      </div>

      <div class="feed">
        <%- include('../partials/post.ejs') %>
      </div>
    </div>
    </main>
    <script src="/js/script.js"></script>